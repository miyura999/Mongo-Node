<%- include('template/cabecera', {tituloweb: 'Inicio'}) %>

<div class="container my-5">
  <!-- Hero Section -->
  <div class="row mb-5">
    <div class="col-12">
      <div class="hero-section text-center p-5 rounded-4 shadow-sm">
        <i class="bi bi-people-fill display-1 text-primary mb-3"></i>
        <h1 class="display-4 fw-bold text-gradient">Gestión de Alumnos</h1>
        <p class="lead text-muted">
          Sistema completo para administrar estudiantes
        </p>
      </div>
    </div>
  </div>

  <!-- Formulario de Registro -->
  <div class="row mb-5">
    <div class="col-lg-5 col-md-6 mx-auto">
      <div class="card shadow-lg border-0 rounded-4 form-card">
        <div
          class="card-header bg-gradient-primary text-white py-3 rounded-top-4"
        >
          <h4 class="mb-0">
            <i class="bi bi-person-plus-fill me-2"></i>Registrar Nuevo Alumno
          </h4>
        </div>
        <div class="card-body p-4">
          <form action="/crear" method="POST">
            <div class="mb-4">
              <label for="nombre" class="form-label fw-semibold">
                <i class="bi bi-person me-1"></i>Nombre Completo
              </label>
              <input
                id="nombre"
                name="nombre"
                type="text"
                class="form-control form-control-lg"
                placeholder="Ej: Juan Pérez García"
                required
              />
            </div>
            <div class="mb-4">
              <label for="edad" class="form-label fw-semibold">
                <i class="bi bi-calendar-event me-1"></i>Edad
              </label>
              <input
                id="edad"
                name="edad"
                type="number"
                class="form-control form-control-lg"
                placeholder="Ej: 20"
                min="1"
                max="150"
                required
              />
            </div>
            <button
              type="submit"
              class="btn btn-primary btn-lg w-100 btn-guardar"
            >
              <i class="bi bi-save me-2"></i>Registrar Alumno
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabla de Alumnos -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-lg border-0 rounded-4">
        <div
          class="card-header bg-gradient-secondary text-white py-3 rounded-top-4"
        >
          <h4 class="mb-0">
            <i class="bi bi-list-ul me-2"></i>Lista de Alumnos
            <span class="badge bg-light text-dark ms-2"
              ><%= alumnos.length %></span
            >
          </h4>
        </div>
        <div class="card-body p-0">
          <% if (alumnos.length === 0) { %>
          <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <p class="text-muted mt-3 fs-5">No hay alumnos registrados</p>
            <p class="text-muted">Comienza agregando tu primer estudiante</p>
          </div>
          <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover table-custom mb-0">
              <thead>
                <tr>
                  <th style="display: none">ID</th>
                  <th class="ps-4"><i class="bi bi-person me-2"></i>Nombre</th>
                  <th><i class="bi bi-calendar3 me-2"></i>Edad</th>
                  <th class="text-center pe-4">
                    <i class="bi bi-gear me-2"></i>Acciones
                  </th>
                </tr>
              </thead>
              <tbody>
                <% alumnos.forEach((alumno) => { %>
                <tr class="alumno-row">
                  <td style="display: none"><%= alumno._id %></td>
                  <td class="ps-4 fw-semibold"><%= alumno.nombre %></td>
                  <td><%= alumno.edad %> años</td>
                  <td class="text-center pe-4">
                    <button
                      type="button"
                      class="btnEditar btn btn-sm btn-outline-primary me-2"
                      title="Editar alumno"
                      data-id="<%= alumno._id %>"
                      data-nombre="<%= alumno.nombre %>"
                      data-edad="<%= alumno.edad %>"
                    >
                      <i class="bi bi-pencil-square"></i>
                    </button>

                    <a
                      href="/borrar/<%= alumno._id %>"
                      class="btn btn-sm btn-outline-danger"
                      onclick="return confirm('¿Estás seguro de eliminar este alumno?')"
                      title="Eliminar alumno"
                    >
                      <i class="bi bi-trash"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal para Editar -->
<div id="modalAlumno" class="modal fade" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 shadow-lg border-0">
      <div class="modal-header bg-gradient-primary text-white rounded-top-4">
        <h5 class="modal-title">
          <i class="bi bi-pencil-square me-2"></i>Editar Información del Alumno
        </h5>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <div class="modal-body p-4">
        <form action="/editar" method="POST">
          <input name="id_editar" id="id_editar" type="hidden" />
          <div class="mb-4">
            <label for="nombre_editar" class="form-label fw-semibold">
              <i class="bi bi-person me-1"></i>Nombre Completo
            </label>
            <input
              id="nombre_editar"
              name="nombre_editar"
              type="text"
              class="form-control form-control-lg"
              required
            />
          </div>
          <div class="mb-4">
            <label for="edad_editar" class="form-label fw-semibold">
              <i class="bi bi-calendar-event me-1"></i>Edad
            </label>
            <input
              id="edad_editar"
              name="edad_editar"
              type="number"
              class="form-control form-control-lg"
              min="1"
              max="150"
              required
            />
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg">
              <i class="bi bi-check-circle me-2"></i>Actualizar Datos
            </button>
            <button
              type="button"
              class="btn btn-secondary btn-lg"
              data-bs-dismiss="modal"
            >
              <i class="bi bi-x-circle me-2"></i>Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('template/footer') %>
